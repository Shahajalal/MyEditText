<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context="com.example.shahajalalsamrat.myedittextviewdemo.MainActivity">

    <EditText
        android:layout_marginBottom="10dp"
        android:id="@+id/edittext1id"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:hint="@string/text_name"
        android:inputType="numberDecimal"

        />
    <EditText
        android:id="@+id/edittext2id"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:hint="@string/text_name2"
        android:inputType="numberDecimal"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        android:layout_margin="10dp"
        android:padding="10dp"
        <Button
            android:id="@+id/plusid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="20dp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/minusid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="20dp"
            android:textStyle="bold"
            />



    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/productid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="20dp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/divisionid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="20dp"
            android:textStyle="bold"
            />

    </LinearLayout>

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/resultid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"

        />

</LinearLayout>
